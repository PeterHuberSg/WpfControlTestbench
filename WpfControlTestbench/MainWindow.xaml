<Window x:Class="WpfTestbench.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="WPF Control Testbench" Background="Gainsboro">
  <StackPanel>
    <TextBlock Text="WPF Control Testbench" FontSize="20" FontWeight="Bold" Margin="5"/>
    <StackPanel Orientation="Horizontal" Background="White" HorizontalAlignment="Center" Margin="5">
      <StackPanel.Resources>
        <Style TargetType="Button">
          <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="StackPanel">
          <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>
      </StackPanel.Resources>

      <StackPanel HorizontalAlignment="Left" Margin="6">
        <Button Name="StackPanelButton" Content="_StackPanel"/>
        <Button Name="TextBoxButton" Content="_Textbox"/>
      </StackPanel>

      <StackPanel HorizontalAlignment="Left" Margin="0,6,6,6">
        <Button Name="ControlButton" Content="_Control"/>
      </StackPanel>
    </StackPanel>
  </StackPanel>
</Window>
